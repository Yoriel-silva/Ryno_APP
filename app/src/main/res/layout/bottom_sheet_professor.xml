<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#3D3D3D"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="@drawable/circular_white_background"
            android:src="@drawable/ic_default_avatar" />
        <ImageView
            android:id="@+id/imgBorda"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="@drawable/circular_border" />
    </FrameLayout>

    <TextView android:id="@+id/txtNome"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:layout_marginTop="20dp"
        android:textColor="#8900DD"
        android:textSize="30sp"
        android:textStyle="normal"/>

    <TextView android:id="@+id/txtEmail"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:layout_marginTop="20dp"
        android:textColor="#8900DD"
        android:textSize="30sp"
        android:textStyle="normal"/>

    <TextView android:id="@+id/txtTelefone"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:layout_marginTop="20dp"
        android:textColor="#8900DD"
        android:textSize="30sp"
        android:textStyle="normal"/>

    <TextView android:id="@+id/txtCidade"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:layout_marginTop="20dp"
        android:textColor="#8900DD"
        android:textSize="30sp"
        android:textStyle="normal"/>

    <TextView android:id="@+id/txtCref"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:layout_marginTop="20dp"
        android:textColor="#8900DD"
        android:textColorLink="#8900DD"
        android:textSize="30sp"
        android:textStyle="normal"/>

    <TextView android:id="@+id/txtModalidades"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:layout_marginTop="20dp"
        android:textColor="#8900DD"
        android:textSize="30sp"
        android:textStyle="normal"/>
</LinearLayout>